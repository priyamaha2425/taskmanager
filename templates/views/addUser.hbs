<html>
    <head>
        <title>Add User</title>
        <script src="/js/jquery-3.6.0.js"></script>
        <script src="/js/adduser.js"></script>
    </head>
    <body>
        <h1> {{title}}</h1>
        <form id="userForm">
            <label>Name</label>
            <input type="text" id="name" value={{user.name}}><br><br>
            <label>Email</label>
            <input type="text" id="email" value={{user.email}}><br><br>
            <label>Password</label>
            <input type="password" id="password" value={{user.password}}><br><br>
            <input type="submit" value="Create">
            <input type="reset">
        </form>
    </body>
</html>